{
  "mcpServers": {
    "filesystem": {
      "type": "builtin",
      "name": "fs",
      "options": {
        "allowed_directories": ["/tmp", "/private/tmp"]
      },
      "allowedTools": ["read_file", "write_file", "list_directory"]
    },
    "oci_compute": {
      "type": "local",
      "command": [
        "uv",
        "run",
        "oci_compute.py"
      ]
    },
    "oci_networking": {
      "type": "local",
      "command": [
        "uv",
        "run",
        "oci_networking.py"
      ],
      "excludedTools": [
        "terminate_instance"
      ]
    },
    "oci_resource_search": {
      "type": "local",
      "command": [
        "uv",
        "run",
        "oci_resource_search.py"
      ]
    }
  }
}
